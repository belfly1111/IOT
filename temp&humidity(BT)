#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x3F,16,2);
#include "DHT.h"                           // DHT.h 라이브러리를 포함한다.
#define DHTPIN 7                          // DHTPIN을 디지털 2번핀으로 정의한다.
#define DHTTYPE DHT11              // DHTTYPE을 DHT11로 정의한다.
DHT dht(DHTPIN, DHTTYPE); 

void setup() {
 lcd.init();
 lcd.backlight();
 Serial.begin(9600);
}

void loop() {
  int h = dht.readHumidity();         // 변수 선언 (h는 습도)
  int t = dht.readTemperature();     // 변수 선언 (t는 온도)
  lcd.setCursor(0,0);
  lcd.print("Humidity: ");          // Humidity를 출력
  lcd.print(h);                           // h(습도 값) 출력
  lcd.print("%");                   //  %를 출력
  lcd.setCursor(0,1);
  lcd.print("Temperature:");    // Temperature를 출력
  lcd.print(t);                            // t(온도 값) 출력

  Serial.print("Humidity: ");          // Humidity를 출력
  Serial.print(h);                           // h(습도 값) 출력
  Serial.print("% ");                    // C 출력 후 줄바꿈 lcd.print("Humidity: ");          // Humidity를 출력
  Serial.print("Temperature:");    // Temperature를 출력
  Serial.print(t);                            // t(온도 값) 출력
  Serial.println("C ");                    // C 출력 후 줄바꿈 lcd.print("Humidity: ");          // Humidity를 출력

  delay(1000);   
}
